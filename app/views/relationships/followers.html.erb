<h2>Follower User</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
   <tr>
    <% @users.each do |user| %>
    <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
    <td><%= user.name %></td>
    <td>フォロー数:<%= user.followings.count %></td>
    <td>フォロワー数:<%= user.followers.count %></td>
    <td><%= link_to "show",user_path(user.id) %></td>
    <% end %>
   </tr>
  </tbody>
</table>